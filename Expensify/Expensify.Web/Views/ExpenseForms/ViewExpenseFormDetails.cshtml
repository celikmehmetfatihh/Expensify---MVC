@model Expensify.Web.Models.ViewModels.ExpenseFormDetailsViewModel

@{
    ViewData["Title"] = "Expense Form Details";
}

<div class="container py-5">
    <h1 class="mb-5 text-primary">Expense Form Details</h1>

    <!-- General Details -->
    <div class="mb-5">
        <h3 class="mb-4 text-secondary">General Information</h3>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Employee:</strong> @Model.EmployeeFullName</p>
                <p><strong>Submission Date:</strong> @Model.SubmissionDate.ToShortDateString()</p>
            </div>
            <div class="col-md-6">
                <p><strong>Manager:</strong> @Model.ManagerFullName</p>
                <p><strong>Is Approved by Manager:</strong> @Model.IsApprovedByManager</p>
            </div>
            <div class="col-md-6">
                <p><strong>Is Paid by Accountant:</strong> @Model.IsPaidByAccountant</p>
                <p><strong>Currency:</strong> @Model.Currency</p>
            </div>
        </div>
    </div>

    <!-- Expenses List -->
    <div class="mb-5">
        <h3 class="mb-4 text-secondary">Expenses</h3>
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Description</th>
                    <th>Date</th>
                    <th class="text-end">Amount (@Model.Currency)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.Expenses)
                {
                    <tr class="align-middle">
                        <td>@expense.Description</td>
                        <td>@expense.Date.ToShortDateString()</td>
                        <td class="text-end">@expense.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
